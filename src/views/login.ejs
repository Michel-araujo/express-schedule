<%- include('./includes/head') %>
    <%- include('./includes/header') %>
        <div class="container">
            <div class="row">
                <div class="col-lg-8">
                </div>
                <div class="col-lg-4 my-5">
                    <h1 class="text-start">Login!</h1>
                    <p class="text-start">Digite seu usuario e senha para acessar!</p>
                    <%- include('./includes/messages') %>
                    <div class="my-5">
                        <form action="/login/authentication" method="POST">
                            <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
                            <div class=" form-group mb-3">
                                <label for="staticEmail2" class="visually-hidden">Email</label>
                                <input name="email" type="text" class="form-control" id="staticEmail2" placeholder="E-mail">
                            </div>
                            <div class=" form-group mb-3">
                                <label for="inputPassword2" class="visually-hidden">Senha</label>
                                <input name="password" type="password" class="form-control" id="inputPassword2" placeholder="Senha">
                            </div>
                            <div class="row justify-content-between">
                                <div class="col-6"><button type="submit" class="btn btn-primary mb-3">Entrar</button>
                                </div>
                                <div class="col-6 text-end"><a
                                        class="text-end link-offset-2 link-offset-3-hover link-underline link-underline-opacity-0 link-underline-opacity-75-hover"
                                        href="#">
                                        Esqueci minha senha
                                    </a>
                                </div>
                            </div>
                        </form>
                    </div>
                    <p class="text-start">Não tem cadastro ainda? Cadastre-se agora e aproveite nosso aplicativo ao máximo!</p>
                    <div class="row">
                        <div class="col-12">
                            <a href="/register" class="btn btn-primary">Cadastre-se</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <%- include('./includes/footer') %>